const Chatbot = () => {
  const [input, setInput] = useState('');
  const [messageHistory, setMessageHistory] = useState([]);

  const handleInputChange = (event) => {
    setInput(event.target.value);
  }

  const sendPostRequest = () => {
    axios.post('YOUR_API_GATEWAY_ENDPOINT', { message: input })
      .then(response => {
        setMessageHistory([...messageHistory, { message: input, response: response.data.message }]);
        setInput(''); // Clear input after sending message
      })
      .catch(error => {
        console.error(error);
      });
  }

  return (
    <div className="chatbot-container">
      <div className="chat-history">
        {messageHistory.map((message, index) => (
          <div key={index} className="message-container">
            <p className="user-message">{message.message}</p>
            <p className="chatbot-message">{message.response}</p>
          </div>
        ))}
      </div>
      <div className="chat-input-container">
        <input className="chat-input" type="text" value={input} onChange={handleInputChange} />
        <button className="send-button" onClick={sendPostRequest}>Send</button>
      </div>
    </div>
  );
}


//CSS
.chatbot-container {
  width: 400px;
  border: 1px solid black;
  border-radius: 5px;
  padding: 10px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 500px;
}

.chat-history {
  overflow-y: auto;
  flex: 1;
}

.message-container {
  display: flex;
  flex-direction: column;
  margin-bottom: 10px;
}

.user-message {
  background-color: #f0f0f0;
  padding: 5px;
  border-radius: 5px;
}

.chatbot-message {
  background-color: #c9f9ff;
  padding: 5px;
  border-radius: 5px;
}

.chat-input-container {
  display: flex;
  margin-top: 10px;
}

.chat-input {
  flex: 1;
  border-radius: 5px;
  padding: 5px;
  border: 1px solid black;
  margin-right: 10px;
}

.send-button {
  border: none;
  background-color: #4CAF50;
  color: white;
  padding: 5px;
  border-radius: 5px;
  cursor: pointer;
}
