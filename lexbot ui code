import React, { useState } from 'react';
import axios from 'axios';

//Create a functional component:
//Create a new function in your component file called Chatbot that will contain the code for your chatbot component. The component takes no props, so it will be a simple function with no parameters. Add the following code:

//javascript
//Copy code

const Chatbot = () => {
  const [input, setInput] = useState('');
  const [response, setResponse] = useState('');
  
  const handleInputChange = (event) => {
    setInput(event.target.value);
  }
  
  const sendPostRequest = () => {
    axios.post('YOUR_API_GATEWAY_ENDPOINT', { message: input })
      .then(response => {
        setResponse(response.data.message);
      })
      .catch(error => {
        console.error(error);
      });
  }
  
  return (
    <div>
      <input type="text" value={input} onChange={handleInputChange} />
      <button onClick={sendPostRequest}>Send</button>
      <p>{response}</p>
    </div>
  );
}
//Replace YOUR_API_GATEWAY_ENDPOINT with your actual endpoint:
//Make sure to replace the YOUR_API_GATEWAY_ENDPOINT placeholder in the sendPostRequest function with the actual endpoint for your AWS Lex Chatbot API Gateway.

//Export the component:
//Export the Chatbot component so that it can be used in other parts of your React application. Add the following code at the end of the file:

//javascript
//Copy code

export default Chatbot;

//That's it! Your Chatbot functional component should now be able to interact with your AWS Lex Chatbot API Gateway by sending a POST request and displaying the chatbot's response in the component.


const Chatbot = () => {
  const [input, setInput] = useState('');
  const [messageHistory, setMessageHistory] = useState([]);

  const handleInputChange = (event) => {
    setInput(event.target.value);
  }

  const sendPostRequest = () => {
    axios.post('YOUR_API_GATEWAY_ENDPOINT', { message: input })
      .then(response => {
        setMessageHistory([...messageHistory, { message: input, response: response.data.message }]);
        setInput(''); // Clear input after sending message
      })
      .catch(error => {
        console.error(error);
      });
  }

  return (
    <div>
      <input type="text" value={input} onChange={handleInputChange} />
      <button onClick={sendPostRequest}>Send</button>
      {messageHistory.map((message, index) => (
        <div key={index}>
          <p>User: {message.message}</p>
          <p>Chatbot: {message.response}</p>
        </div>
      ))}
    </div>
  );
}



export default ChatbotComponent;
